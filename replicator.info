name = Replicator
description = A standard theme created by the peeps at ITK. Twitter: @woeldiche, @magnifydk and @cableman0408
screenshot = screenshot.png
core = 6.x

engine = phptemplate

;Regions
regions[aaktopbar] = AAK topbar
regions[header] = Header
regions[top_region] = Top
regions[content_top] = Content, Above
regions[content_bottom] = Content, Below
regions[left] = Left
regions[right] = Right
regions[bottom_region] = Bottom
regions[footer] = Footer


;Features
features[] = logo
features[] = name
features[] = slogan
features[] = node_user_picture
features[] = comment_user_picture
features[] = search
features[] = favicon

;Stylesheets
stylesheets[all][]    = styles/calendar.less
stylesheets[all][]    = styles/rep-reset-min.less
stylesheets[screen][] = styles/rep-grid.less
stylesheets[all][]    = styles/rep-typography.less
stylesheets[screen][] = styles/rep-tabs.less
stylesheets[screen][] = styles/rep-styles.less
stylesheets[screen][] = styles/rep-blocks.less
stylesheets[print][]  = styles/print.less

;IE specific stylesheets
ie stylesheets[if IE 6][all][] = styles/rep-ie6.less
ie stylesheets[if IE 7][all][] = styles/rep-ie7.less
ie stylesheets[if IE 8][all][] = styles/rep-ie8.less

;Scripts
scripts[] = scripts/rep-common.js

;Panels layouts 
plugins[panels][layouts] = templates/layouts

;Settings
settings[replicator_breadcrumb_separator] = 0
settings[replicator_rebuild_registry]     = 0